set -e -x

if [ -z "$BOSH_PACKAGES_DIR" ]; then
	pkg_dir=$(readlink -nf /var/vcap/packages/golang_1.7)
else
	pkg_dir=$BOSH_PACKAGES_DIR/golang_1.7
fi

export GOROOT=$pkg_dir
export PATH=$GOROOT/bin:$PATH

mkdir -p ${BOSH_INSTALL_TARGET}/src
 cp -a * ${BOSH_INSTALL_TARGET}/src 
export GOPATH=$BOSH_INSTALL_TARGET

mkdir $BOSH_INSTALL_TARGET/bin

go build -o $BOSH_INSTALL_TARGET/bin/vps $BOSH_INSTALL_TARGET/src/github.com/cloudfoundry-community/vps/cmd/vps/main.go